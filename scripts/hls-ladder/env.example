# =============================================================================
# ENVIRONMENT VARIABLES FOR HLS LADDER TRANSCODER
# =============================================================================
# Copy this file to .env and fill in your actual values
# Then run: source .env
# =============================================================================

# -----------------------------------------------------------------------------
# CLOUDFLARE R2 CONFIGURATION
# -----------------------------------------------------------------------------
# Your R2 account ID is found in the Cloudflare dashboard
# Endpoint format: https://<account-id>.r2.cloudflarestorage.com

export R2_ENDPOINT="https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com"
export R2_BUCKET="focus-music-audio"

# R2 API credentials (create in Cloudflare Dashboard > R2 > Manage R2 API Tokens)
export AWS_ACCESS_KEY_ID="your-r2-access-key-id"
export AWS_SECRET_ACCESS_KEY="your-r2-secret-access-key"

# -----------------------------------------------------------------------------
# SUPABASE STORAGE CONFIGURATION (for sync script only)
# -----------------------------------------------------------------------------
# Supabase S3-compatible endpoint (found in Storage settings)

export SUPABASE_S3_ENDPOINT="https://YOUR_PROJECT_REF.supabase.co/storage/v1/s3"
export SUPABASE_S3_BUCKET="audio"
export SUPABASE_ACCESS_KEY_ID="your-supabase-s3-access-key"
export SUPABASE_SECRET_ACCESS_KEY="your-supabase-s3-secret-key"

# -----------------------------------------------------------------------------
# OPTIONAL: WORK DIRECTORY
# -----------------------------------------------------------------------------
# Where temporary files are stored during transcoding (default: /tmp/hls-transcode)

# export WORK_DIR="/tmp/hls-transcode"
