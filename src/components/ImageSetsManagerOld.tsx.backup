import { useState, useEffect } from 'react';
import { Image, Plus, Trash2, Upload, Check, X, AlertCircle, HelpCircle } from 'lucide-react';
import { supabase } from '../lib/supabase';

type ImageSet = {
  id: string;
  name: string;
  description: string | null;
  is_system: boolean;
  created_by: string | null;
  is_active: boolean;
  created_at: string;
  image_count?: number;
};

type Channel = {
  id: string;
  channel_name: string;
  image_url: string | null;
};

type ImageSetImage = {
  id: string;
  image_set_id: string;
  channel_id: string;
  image_url: string;
  channel_name?: string;
};

export default function ImageSetsManager() {
  const [imageSets, setImageSets] = useState<ImageSet[]>([]);
  const [channels, setChannels] = useState<Channel[]>([]);
  const [selectedSet, setSelectedSet] = useState<ImageSet | null>(null);
  const [setImages, setSetImages] = useState<ImageSetImage[]>([]);
  const [showCreateModal, setShowCreateModal] = useState(false);
  const [newSetName, setNewSetName] = useState('');
  const [newSetDescription, setNewSetDescription] = useState('');
  const [uploading, setUploading] = useState(false);
  const [message, setMessage] = useState<{ type: 'success' | 'error'; text: string } | null>(null);
  const [bulkUploadFiles, setBulkUploadFiles] = useState<FileList | null>(null);
  const [uploadProgress, setUploadProgress] = useState<{
    current: number;
    total: number;
    currentFileName: string;
    completed: string[];
    failed: { fileName: string; error: string }[];
  } | null>(null);
  const [showGuidelines, setShowGuidelines] = useState(false);

  useEffect(() => {
    loadImageSets();
    loadChannels();
  }, []);

  useEffect(() => {
    if (selectedSet) {
      loadSetImages(selectedSet.id);
    }
  }, [selectedSet]);

  const loadImageSets = async () => {
    const { data, error } = await supabase
      .from('image_sets')
      .select('*')
      .order('created_at', { ascending: false });

    if (data && !error) {
      const setsWithCounts = await Promise.all(
        data.map(async (set) => {
          const { count } = await supabase
            .from('image_set_images')
            .select('*', { count: 'exact', head: true })
            .eq('image_set_id', set.id);
          return { ...set, image_count: count || 0 };
        })
      );
      setImageSets(setsWithCounts);
    }
  };

  const loadChannels = async () => {
    console.log('Loading channels...');
    const { data, error } = await supabase
      .from('audio_channels')
      .select('id, channel_name, image_url')
      .order('channel_name');

    if (error) {
      console.error('Error loading channels:', error);
      setMessage({
        type: 'error',
        text: `Failed to load channels: ${error.message}`
      });
      return;
    }

    if (data) {
      console.log(`Loaded ${data.length} channels:`, data.map(c => c.channel_name));
      setChannels(data);
    } else {
      console.warn('No channels returned from query');
      setChannels([]);
    }
  };

  const loadSetImages = async (setId: string) => {
    const { data, error } = await supabase
      .from('image_set_images')
      .select(`
        id,
        image_set_id,
        channel_id,
        image_url,
        audio_channels (channel_name)
      `)
      .eq('image_set_id', setId);

    if (data && !error) {
      const formatted = data.map((img: any) => ({
        id: img.id,
        image_set_id: img.image_set_id,
        channel_id: img.channel_id,
        image_url: img.image_url,
        channel_name: img.audio_channels?.channel_name,
      }));
      setSetImages(formatted);
    }
  };

  const createImageSet = async () => {
    if (!newSetName.trim()) {
      setMessage({ type: 'error', text: 'Please enter a name for the image set' });
      return;
    }

    const { data, error } = await supabase
      .from('image_sets')
      .insert({
        name: newSetName,
        description: newSetDescription || null,
        is_system: true,
        is_active: true,
      })
      .select()
      .single();

    if (error) {
      setMessage({ type: 'error', text: 'Failed to create image set' });
    } else {
      setMessage({ type: 'success', text: 'Image set created successfully' });
      setShowCreateModal(false);
      setNewSetName('');
      setNewSetDescription('');
      loadImageSets();
      setSelectedSet(data);
    }
  };

  const deleteImageSet = async (setId: string) => {
    if (!confirm('Are you sure you want to delete this image set? This will remove all associated images.')) {
      return;
    }

    const { error } = await supabase
      .from('image_sets')
      .delete()
      .eq('id', setId);

    if (error) {
      setMessage({ type: 'error', text: 'Failed to delete image set' });
    } else {
      setMessage({ type: 'success', text: 'Image set deleted successfully' });
      if (selectedSet?.id === setId) {
        setSelectedSet(null);
      }
      loadImageSets();
    }
  };

  const uploadImageForChannel = async (channelId: string, file: File) => {
    if (!selectedSet) return;

    setUploading(true);
    const fileExt = file.name.split('.').pop();
    const fileName = `system/${selectedSet.id}/${channelId}.${fileExt}`;

    const { error: uploadError } = await supabase.storage
      .from('image-sets')
      .upload(fileName, file, { upsert: true });

    if (uploadError) {
      setMessage({ type: 'error', text: `Failed to upload image: ${uploadError.message}` });
      setUploading(false);
      return;
    }

    const { data: { publicUrl } } = supabase.storage
      .from('image-sets')
      .getPublicUrl(fileName);

    const { error: dbError } = await supabase
      .from('image_set_images')
      .upsert({
        image_set_id: selectedSet.id,
        channel_id: channelId,
        image_url: publicUrl,
      });

    if (dbError) {
      setMessage({ type: 'error', text: 'Failed to save image reference' });
    } else {
      setMessage({ type: 'success', text: 'Image uploaded successfully' });
      loadSetImages(selectedSet.id);
    }

    setUploading(false);
  };

  const bulkUploadImages = async () => {
    if (!selectedSet || !bulkUploadFiles) return;

    if (channels.length === 0) {
      setMessage({
        type: 'error',
        text: 'No channels available. Please ensure channels are loaded and active.'
      });
      return;
    }

    setUploading(true);
    const completed: string[] = [];
    const failed: { fileName: string; error: string }[] = [];

    const filesArray = Array.from(bulkUploadFiles).sort((a, b) => a.name.localeCompare(b.name));

    console.log(`Starting bulk upload: ${filesArray.length} files, ${channels.length} channels available`);

    setUploadProgress({
      current: 0,
      total: filesArray.length,
      currentFileName: '',
      completed: [],
      failed: []
    });

    for (let i = 0; i < filesArray.length; i++) {
      const file = filesArray[i];
      const fileName = file.name.toLowerCase();

      setUploadProgress({
        current: i + 1,
        total: filesArray.length,
        currentFileName: file.name,
        completed: [...completed],
        failed: [...failed]
      });

      try {
        // Extract potential channel identifier from filename
        // e.g., "focus_music_beaches-01.jpg" -> look for "beaches"
        // Remove common prefixes and suffixes, numbers, and extensions
        const cleanFileName = fileName
          .replace(/^focus_music_/, '')  // Remove prefix
          .replace(/-\d+\./, '.')         // Remove number suffix like -01
          .replace(/\.\w+$/, '');         // Remove extension

        // Try to match by channel name in filename
        // Try multiple normalization strategies
        const matchingChannel = channels.find(channel => {
          const channelNameLower = channel.channel_name.toLowerCase();
          const channelNameUnderscore = channelNameLower.replace(/\s+/g, '_');
          const channelNameHyphen = channelNameLower.replace(/\s+/g, '-');
          const channelNameNoSpaces = channelNameLower.replace(/\s+/g, '');

          // Check if any word in the cleaned filename matches the channel name
          const fileNameWords = cleanFileName.split(/[-_\s]+/);

          return fileName.includes(channelNameLower) ||
                 fileName.includes(channelNameUnderscore) ||
                 fileName.includes(channelNameHyphen) ||
                 fileName.includes(channelNameNoSpaces) ||
                 cleanFileName.includes(channelNameLower) ||
                 cleanFileName.includes(channelNameUnderscore) ||
                 cleanFileName.includes(channelNameHyphen) ||
                 cleanFileName.includes(channelNameNoSpaces) ||
                 fileNameWords.some(word =>
                   channelNameLower.includes(word) ||
                   channelNameUnderscore.includes(word) ||
                   channelNameHyphen.includes(word) ||
                   word === channelNameNoSpaces
                 );
        });

        // Fall back to sequential assignment only if within bounds
        const targetChannel = matchingChannel || (i < channels.length ? channels[i] : null);

        console.log(`File ${i + 1}/${filesArray.length}: "${file.name}" -> ${targetChannel ? `Channel: ${targetChannel.channel_name}` : 'NO MATCH'}`);

        if (!targetChannel) {
          const errorMsg = i >= channels.length
            ? `No matching channel found. File ${i + 1} of ${filesArray.length} but only ${channels.length} channels available.`
            : 'No available channel for this image';
          console.error(`Failed to match file: ${file.name}`, errorMsg);
          failed.push({
            fileName: file.name,
            error: errorMsg
          });
          continue;
        }

        const fileExt = file.name.split('.').pop();
        const storagePath = `system/${selectedSet.id}/${targetChannel.id}.${fileExt}`;

        const { error: uploadError } = await supabase.storage
          .from('image-sets')
          .upload(storagePath, file, { upsert: true });

        if (uploadError) {
          failed.push({
            fileName: file.name,
            error: uploadError.message
          });
          continue;
        }

        const { data: { publicUrl } } = supabase.storage
          .from('image-sets')
          .getPublicUrl(storagePath);

        const { error: dbError } = await supabase
          .from('image_set_images')
          .upsert({
            image_set_id: selectedSet.id,
            channel_id: targetChannel.id,
            image_url: publicUrl,
          });

        if (dbError) {
          failed.push({
            fileName: file.name,
            error: dbError.message
          });
        } else {
          completed.push(`${file.name} → ${targetChannel.channel_name}`);
        }
      } catch (error) {
        failed.push({
          fileName: file.name,
          error: error instanceof Error ? error.message : 'Unknown error'
        });
      }
    }

    await loadSetImages(selectedSet.id);

    if (failed.length === 0) {
      setMessage({
        type: 'success',
        text: `Successfully uploaded ${completed.length} images`,
      });
      setTimeout(() => {
        setBulkUploadFiles(null);
        setUploadProgress(null);
      }, 2000);
    } else {
      setMessage({
        type: completed.length > 0 ? 'success' : 'error',
        text: `Uploaded ${completed.length} images. ${failed.length} failed.`,
      });
      setUploadProgress({
        current: filesArray.length,
        total: filesArray.length,
        currentFileName: '',
        completed,
        failed
      });
    }

    setUploading(false);
  };

  const deleteImageFromSet = async (imageId: string, imageUrl: string) => {
    const { error } = await supabase
      .from('image_set_images')
      .delete()
      .eq('id', imageId);

    if (error) {
      setMessage({ type: 'error', text: 'Failed to delete image' });
    } else {
      setMessage({ type: 'success', text: 'Image deleted successfully' });
      if (selectedSet) {
        loadSetImages(selectedSet.id);
      }
    }
  };

  const copyImageFromCurrentSet = async (channelId: string) => {
    if (!selectedSet) return;

    const channel = channels.find(c => c.id === channelId);
    if (!channel?.image_url) {
      setMessage({ type: 'error', text: 'Channel has no current image to copy' });
      return;
    }

    const { error } = await supabase
      .from('image_set_images')
      .upsert({
        image_set_id: selectedSet.id,
        channel_id: channelId,
        image_url: channel.image_url,
      });

    if (error) {
      setMessage({ type: 'error', text: 'Failed to copy image' });
    } else {
      setMessage({ type: 'success', text: 'Image copied successfully' });
      loadSetImages(selectedSet.id);
    }
  };

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <div className="flex items-center gap-3">
          <h2 className="text-lg font-semibold text-slate-900">Select a set to view and manage its images</h2>
          <div className="relative">
            <button
              onMouseEnter={() => setShowGuidelines(true)}
              onMouseLeave={() => setShowGuidelines(false)}
              className="p-1.5 text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded-full transition-colors"
              aria-label="Image upload guidelines"
            >
              <HelpCircle size={20} />
            </button>

            {showGuidelines && (
              <div
                onMouseEnter={() => setShowGuidelines(true)}
                onMouseLeave={() => setShowGuidelines(false)}
                className="absolute left-0 top-full mt-2 w-[500px] bg-white border border-slate-200 rounded-lg shadow-xl z-50 p-4"
              >
                <h3 className="text-sm font-semibold text-slate-900 mb-2">Image Upload Guidelines</h3>
                <ul className="text-sm text-slate-700 space-y-1.5 mb-3">
                  <li><strong>Recommended dimensions:</strong> 1920 × 1080 pixels (16:9 ratio)</li>
                  <li><strong>Alternative:</strong> 2400 × 800 pixels for ultra-wide display</li>
                  <li>Images are automatically resized and optimized to 1920 × 1080</li>
                  <li>Ensures perfect display in both channel cards and expanded player</li>
                </ul>
                <div className="pt-3 border-t border-slate-200">
                  <h4 className="text-sm font-semibold text-slate-900 mb-1.5">Image Naming Behavior</h4>
                  <ul className="text-sm text-slate-700 space-y-1.5">
                    <li><strong>Match by channel name:</strong> If an image filename contains a channel name (e.g., "Tranquility.jpg"), it will be assigned to that channel</li>
                    <li><strong>Auto-assignment:</strong> If an image filename doesn't match any channel name, it will be automatically assigned to channels in order based on filename sorting</li>
                  </ul>
                </div>
              </div>
            )}
          </div>
        </div>
        <button
          onClick={() => setShowCreateModal(true)}
          className="flex items-center gap-2 px-4 py-2 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition-colors"
        >
          <Plus size={20} />
          Create New Set
        </button>
      </div>


      {message && (
        <div
          className={`p-4 rounded-lg flex items-start gap-3 ${
            message.type === 'success'
              ? 'bg-green-50 text-green-900 border border-green-200'
              : 'bg-red-50 text-red-900 border border-red-200'
          }`}
        >
          {message.type === 'success' ? (
            <Check size={20} className="flex-shrink-0 mt-0.5" />
          ) : (
            <AlertCircle size={20} className="flex-shrink-0 mt-0.5" />
          )}
          <p className="flex-1">{message.text}</p>
          <button onClick={() => setMessage(null)}>
            <X size={20} />
          </button>
        </div>
      )}

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div className="lg:col-span-1 space-y-4">
          <div className="space-y-2">
            {imageSets.map((set) => (
              <button
                key={set.id}
                onClick={() => setSelectedSet(set)}
                className={`w-full text-left p-4 rounded-lg border-2 transition-all ${
                  selectedSet?.id === set.id
                    ? 'border-slate-900 bg-slate-50'
                    : 'border-slate-200 hover:border-slate-300'
                }`}
              >
                <div className="flex items-start justify-between">
                  <div className="flex-1">
                    <h4 className="font-semibold text-slate-900">{set.name}</h4>
                    {set.description && (
                      <p className="text-sm text-slate-600 mt-1">{set.description}</p>
                    )}
                    <p className="text-xs text-slate-500 mt-2">
                      {set.image_count || 0} / {channels.length} images
                    </p>
                  </div>
                  <button
                    onClick={(e) => {
                      e.stopPropagation();
                      deleteImageSet(set.id);
                    }}
                    className="text-red-600 hover:text-red-700 p-1"
                  >
                    <Trash2 size={16} />
                  </button>
                </div>
              </button>
            ))}
          </div>
        </div>

        <div className="lg:col-span-2">
          {selectedSet ? (
            <div className="space-y-6">
              <div className="bg-slate-50 rounded-lg p-4">
                <h3 className="font-semibold text-slate-900 mb-4">
                  {selectedSet.name} - Images
                </h3>

                <div className="mb-4 p-4 bg-white rounded-lg border-2 border-dashed border-slate-300">
                  <h4 className="font-medium text-slate-900 mb-2">Bulk Upload Images</h4>
                  <p className="text-sm text-slate-600 mb-2">
                    Upload multiple images at once. <strong>Important:</strong> Include the channel name in each filename for proper matching.
                    The system will search for channel names within filenames (e.g., "cappuccino_1.jpg", "cappuccino-waves.jpg", "my_cappuccino_image.png").
                  </p>
                  <details className="text-xs text-slate-500 mb-3">
                    <summary className="cursor-pointer hover:text-slate-700">
                      {channels.length} channels available (click to view)
                    </summary>
                    <div className="mt-2 p-2 bg-slate-50 rounded max-h-32 overflow-y-auto grid grid-cols-2 gap-1">
                      {channels.map((ch, idx) => (
                        <div key={ch.id} className="text-xs">
                          {idx + 1}. {ch.channel_name}
                        </div>
                      ))}
                    </div>
                  </details>
                  <input
                    type="file"
                    multiple
                    accept="image/*"
                    onChange={(e) => setBulkUploadFiles(e.target.files)}
                    className="block w-full text-sm text-slate-600 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-slate-900 file:text-white hover:file:bg-slate-800"
                    disabled={uploading}
                  />
                  {bulkUploadFiles && !uploadProgress && (
                    <>
                      {bulkUploadFiles.length > channels.length && (
                        <div className="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded-lg text-sm text-yellow-900">
                          <AlertCircle size={16} className="inline mr-2" />
                          Warning: You selected {bulkUploadFiles.length} files but only {channels.length} channels are available.
                          Files should include channel names in their filename for proper matching.
                        </div>
                      )}
                      <button
                        onClick={bulkUploadImages}
                        disabled={uploading}
                        className="mt-3 px-4 py-2 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                      >
                        {uploading ? 'Uploading...' : `Upload ${bulkUploadFiles.length} Files`}
                      </button>
                    </>
                  )}

                  {uploadProgress && (
                    <div className="mt-4 p-4 bg-slate-50 rounded-lg space-y-3">
                      <div className="flex items-center justify-between">
                        <h5 className="text-sm font-semibold text-slate-900">
                          {uploadProgress.current === uploadProgress.total && uploadProgress.failed.length === 0
                            ? 'Upload Complete!'
                            : `Uploading (${uploadProgress.current} of ${uploadProgress.total})`}
                        </h5>
                        {uploadProgress.current === uploadProgress.total && uploadProgress.failed.length === 0 && (
                          <Check size={20} className="text-green-600" />
                        )}
                      </div>

                      {/* Progress Bar */}
                      <div className="w-full bg-slate-200 rounded-full h-2 overflow-hidden">
                        <div
                          className="bg-slate-900 h-full transition-all duration-300 ease-out"
                          style={{ width: `${(uploadProgress.current / uploadProgress.total) * 100}%` }}
                        />
                      </div>

                      {/* Current File */}
                      {uploadProgress.currentFileName && (
                        <div className="flex items-center gap-2 text-sm text-slate-900">
                          <div className="inline-block animate-spin rounded-full h-4 w-4 border-2 border-slate-900 border-t-transparent" />
                          <span className="font-medium">Uploading:</span>
                          <span className="truncate">{uploadProgress.currentFileName}</span>
                        </div>
                      )}

                      {/* Completed Files */}
                      {uploadProgress.completed.length > 0 && (
                        <div className="max-h-32 overflow-y-auto space-y-1">
                          <p className="text-xs font-medium text-green-800 mb-1">
                            Completed ({uploadProgress.completed.length}):
                          </p>
                          {uploadProgress.completed.map((item, idx) => (
                            <div key={idx} className="flex items-start gap-2 text-xs text-green-700">
                              <Check size={14} className="flex-shrink-0 mt-0.5" />
                              <span className="break-all">{item}</span>
                            </div>
                          ))}
                        </div>
                      )}

                      {/* Failed Files */}
                      {uploadProgress.failed.length > 0 && (
                        <div className="max-h-32 overflow-y-auto space-y-1 border-t border-red-200 pt-3">
                          <p className="text-xs font-medium text-red-800 mb-1">
                            Failed ({uploadProgress.failed.length}):
                          </p>
                          {uploadProgress.failed.map((item, idx) => (
                            <div key={idx} className="space-y-0.5">
                              <div className="flex items-start gap-2 text-xs text-red-700">
                                <AlertCircle size={14} className="flex-shrink-0 mt-0.5" />
                                <span className="break-all font-medium">{item.fileName}</span>
                              </div>
                              <p className="text-xs text-red-600 ml-5">{item.error}</p>
                            </div>
                          ))}
                        </div>
                      )}

                      {uploadProgress.current === uploadProgress.total && uploadProgress.failed.length > 0 && (
                        <button
                          onClick={() => {
                            setBulkUploadFiles(null);
                            setUploadProgress(null);
                          }}
                          className="w-full mt-2 px-4 py-2 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition-colors"
                        >
                          Close
                        </button>
                      )}
                    </div>
                  )}
                </div>

                <div className="space-y-3">
                  {channels.map((channel) => {
                    const existingImage = setImages.find(
                      (img) => img.channel_id === channel.id
                    );

                    return (
                      <div
                        key={channel.id}
                        className="flex items-center gap-4 p-3 bg-white rounded-lg border border-slate-200"
                      >
                        <div className="w-20 h-20 bg-slate-100 rounded-lg overflow-hidden flex-shrink-0">
                          {existingImage ? (
                            <img
                              src={existingImage.image_url}
                              alt={channel.channel_name}
                              className="w-full h-full object-cover"
                            />
                          ) : (
                            <div className="w-full h-full flex items-center justify-center">
                              <Image size={24} className="text-slate-400" />
                            </div>
                          )}
                        </div>

                        <div className="flex-1">
                          <h4 className="font-medium text-slate-900">
                            {channel.channel_name}
                          </h4>
                          {existingImage && (
                            <p className="text-xs text-green-600 mt-1">Image uploaded</p>
                          )}
                        </div>

                        <div className="flex items-center gap-2">
                          {!existingImage && channel.image_url && (
                            <button
                              onClick={() => copyImageFromCurrentSet(channel.id)}
                              className="px-3 py-1.5 text-sm bg-slate-100 text-slate-700 rounded hover:bg-slate-200 transition-colors"
                            >
                              Copy Current
                            </button>
                          )}
                          <label className="px-3 py-1.5 text-sm bg-slate-900 text-white rounded cursor-pointer hover:bg-slate-800 transition-colors">
                            <input
                              type="file"
                              accept="image/*"
                              className="hidden"
                              onChange={(e) => {
                                const file = e.target.files?.[0];
                                if (file) uploadImageForChannel(channel.id, file);
                              }}
                              disabled={uploading}
                            />
                            <Upload size={16} className="inline mr-1" />
                            {existingImage ? 'Replace' : 'Upload'}
                          </label>
                          {existingImage && (
                            <button
                              onClick={() =>
                                deleteImageFromSet(existingImage.id, existingImage.image_url)
                              }
                              className="p-1.5 text-red-600 hover:text-red-700"
                            >
                              <Trash2 size={16} />
                            </button>
                          )}
                        </div>
                      </div>
                    );
                  })}
                </div>
              </div>
            </div>
          ) : (
            <div className="flex items-center justify-center h-64 bg-slate-50 rounded-lg">
              <p className="text-slate-500">Select an image set to manage its images</p>
            </div>
          )}
        </div>
      </div>

      {showCreateModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
          <div className="bg-white rounded-lg p-6 max-w-md w-full">
            <h3 className="text-xl font-bold text-slate-900 mb-4">Create Image Set</h3>

            <div className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-slate-700 mb-2">
                  Name
                </label>
                <input
                  type="text"
                  value={newSetName}
                  onChange={(e) => setNewSetName(e.target.value)}
                  placeholder="e.g., Nature Scenes, Abstract Art"
                  className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-900"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-slate-700 mb-2">
                  Description (optional)
                </label>
                <textarea
                  value={newSetDescription}
                  onChange={(e) => setNewSetDescription(e.target.value)}
                  placeholder="Describe this image set..."
                  rows={3}
                  className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-900"
                />
              </div>
            </div>

            <div className="flex gap-3 mt-6">
              <button
                onClick={createImageSet}
                className="flex-1 px-4 py-2 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition-colors"
              >
                Create
              </button>
              <button
                onClick={() => {
                  setShowCreateModal(false);
                  setNewSetName('');
                  setNewSetDescription('');
                }}
                className="flex-1 px-4 py-2 bg-slate-200 text-slate-700 rounded-lg hover:bg-slate-300 transition-colors"
              >
                Cancel
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
}
